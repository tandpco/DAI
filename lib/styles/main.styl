@import 'nib'

@import 'utility/_variables'
@import 'utility/_helpers'
@import 'utility/_layout'
@import 'utility/_buttons'
@import 'utility/_coverflow'
@import 'utility/_tabs'

@import 'pages/*'

@import 'blocks/*'

body 
	background-color #F5F2EA
	& > *
		font-family $font-sans

.subscription-bar
	background-color #4B4B4B
	position relative
	clearfix()
	.stripes
		bottom 5px
		left 0
		pointer-events none
		position absolute
		right 0
		top 5px
		// Border
		border-top 2px dashed #5C5C5C
		border-bottom 2px dashed #5C5C5C
	.col
		padding 15px
		&.subscribe
			form
				border 2px solid #5C5C5C
				color $purple-secondary
				height 100%
				position relative
				clearfix()
				h3, p
					margin 0
					padding 0
				p
					font-size 14px
					font-weight 400
					line-height 16px
				button, a
					appearance none
					background $red-primary
					border 0
					border-left 2px solid #5C5C5C
					box-shadow none
					bottom 0
					color $purple-secondary
					font-size 20px
					left 66.6666666666667%
					letter-spacing 0.125em
					line-height 94px
					outline 0
					position absolute
					right 0
					text-align center
					text-decoration none
					text-shadow none
					text-transform uppercase
					top 0
					transition background-color 300ms ease
					vertical-align middle
					width inherit
					&:hover
						background-color darken($red-primary, 15%)
			@media (max-width: $sm)
				.col-md-4
					position relative
					a
						border-left 0
						border-top 2px solid #5C5C5C
						font-size 14px
						left 0
						line-height 30px
						right 0
				.col-md-8
					h3
						font-size 14px
						letter-spacing 0.05em
					p
						font-size 12px
						margin-top 5px
		&.social
			background-color #404040
			line-height 94px
			vertical-align middle
			.col
				padding-bottom 0
				padding-top 0
				.social-icon
					background-color #4B4B4B
					border-color #3C3C3C
					border-style solid
					border-width 2px
					color $purple-secondary
					display inline-block
					line-height 60px
					text-align center
					transition all 300ms ease
					width 100%
					i
						font-size 32px
						vertical-align middle
					&.fb:hover
						background-color #3B5998
					&.rss:hover
						background-color orange
					&.tw:hover
						background-color #00ACED
					&.ln:hover
						background-color #007BB6
section
	padding 45px 0
	&.strengths
		background-color $white
	&.impact
		color $beige-primary
		h2
			margin 0 0 15px
		p
			margin 0 0 30px
		.fifths
			img
				display block
				margin 0 auto 10px
			p, strong
				font-size 14px
				margin 0
			@media (max-width: $sm)
				margin-bottom 30px
	&.bar
		background-color $purple-secondary
		height 120px
		line-height 120px
		padding 0
		h4
			color #96995E
			font-size 20px
			margin 0 5px 0 0
			vertical-align middle
			img
				margin-right 15px
				vertical-align middle
		span
			background-color #F5F2EA
			border 4px solid #EDEAE2
			color $beige-primary
			cursor pointer
			display inline-block
			line-height 30px
			margin 0 5px
			padding 0 10px
			&.active
				border 4px solid $blue-primary
				color $blue-primary
			&:last-of-type
				margin-right 10px
		span.divider
			background-color transparent
			border 0
			border-right 2px dotted $blue-primary
			cursor: initial
			display inline
			height 30px
			padding 0
			position relative
			vertical-align middle
	&.slider
		color $beige-primary
		h2
			margin 0
		ul
			list-style none
			margin 0
			padding 0
			li
				padding 15px