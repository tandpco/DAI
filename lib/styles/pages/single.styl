#page
	.jumbotron
		height 325px
		padding-bottom 0
		.entry-meta
			font-size 22px
			margin-top 0px
			span
				display inline-block
				color $white
				a
					text-decoration none
					color $white
				&:vistied
					color $white
				&.byline
					margin-left 20px
	.content-area
		float left
		margin 0 -25% 0 0
		width 100%
	.site-main
		margin 0 25% 0 0
	.site-content .widget-area
		float right
		overflow hidden
		width 25%
	.site-footer
		clear both
		width 100%
	.leveler
		overflow hidden
	#primary, #secondary
		margin-bottom: -99999px;
		padding-bottom: 99999px;
	#primary
		background-color $white
	#secondary
		background-color $background
	.site-footer
		margin-top 0px
		h1
			font-size 16px
#secondary
	padding-top 15px
	h1
		font-size 14px
		text-transform uppercase
	.widget
		margin-left 25px
	ul
		margin 0
		padding 0
		list-style none
		font-size 14px
	a
		text-decoration none
		color #424242
	select
		width 80%
		font-size 14px
		padding 5px
		background-color #F5F2EA
.social
	margin-top 25px
	margin-bottom 25px
.container.navigation.post-navigation
	position relative
	.nav-blog-home
		position absolute
		left 0
		display inline-block
		width 100%
		text-align center
		color black
		a.tr-up
			color $black-primary
			line-height 32px
			