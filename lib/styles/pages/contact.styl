.page-template-page-contact
  .jumbotron
    background-image url('../images/contact-banner.png')
    background-position center
    background-size cover
    h1
      font-size 48px
    p
      font-size 22px
      margin-top 0
  form
    .form-group
      background-color $white
      border 1px solid $dark-gray
      border-radius 2px
      margin 0 0 10px
      padding 10px
      position relative
      clearfix()
      .error
        position absolute
        top 0
        left 0
        right 0
        text-align right
        padding 2px 15px
        font-size 10px
        font-weight 600
        background-color rgba($red-primary, 0.75)
        z-index 0
        line-height 28px
        text-transform uppercase
        color $purple-secondary
        border-bottom 1px solid darken($red-primary, 15%)
      &.has-error
        label
          color $purple-secondary
      label
        color $dark-gray
        display block
        font-size 10px
        font-weight 600
        letter-spacing 0.1em
        margin-bottom 10px
        position relative
        z-index 1
      input, textarea
        border 0
        height auto
        outline 0
        padding 0
        resize none
        vertical-align middle
        +placeholder()
          font-size 12px
          font-weight 100
      .group-column
        float left
        width 50%
        &.left
          border-right 1px solid #A6A6A6
          input
            padding 0 10px 0 0
        &.right
          input
            padding 0 0 0 10px
    button
      appearance none
      background-image none
      border 0
      border-radius 0
      box-shadow none
      background-color $red-primary
      color $white
      font-size 20px
      font-weight 400
      outline 0
      line-height 26px
      text-shadow none
      text-transform uppercase
      width 100%
      &:hover
        background-image none
        border 0
        box-shadow none
  .sidebar
    a
      display block
      text-decoration none
      &.fb
        color #3B5998
      &.tw
        color #28A9E0
      &.vm
        color #5BC8FF
      .social
        display block
        font-family $proxima
        font-size 20px
        line-height 36px
        margin-bottom 5px
        // margin-top 15px
        padding 5px
        &:first-of-type
          margin-top 10px
        &.fb
          background-color #EAEEF4
          span
            background-color #3B5998
        &.tw
          background-color #E2EFF5
          span
            background-color #28A9E0
        &.vm
          background-color #E2F3FC
          span
            background-color #5BC8FF
      span
        background-color black
        display inline-block
        font-size 16px
        margin-right 5px
        padding 0 5px
        color $white
    h4
      margin-bottom 0
    p
      margin-top 0