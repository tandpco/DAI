.site-footer
	background-color $dark-gray
	color $purple-secondary
	margin-top 30px
	@media (max-width: $sm)
		padding 30px 0
	@media (min-width: $sm)
		height 125px
	ul
		line-height 0
		list-style none
		margin 0 0 10px
		padding 0
		text-align center
		li
			color $purple-secondary
			display inline
			&:nth-child(n+2)
				margin-left 15px
			a
				color inherit
				font-size 12px
				font-weight 700
				line-height 12px
				@extend .tr-up
	address
		font-size 12px
		font-style normal
		font-weight 300
		letter-spacing 0.05em
		margin 0
		padding 0
		text-align center
		@media (max-width: $sm)
			font-size 10px
			&:first-of-type
				border-top 1px solid $beige-primary
				margin-top 10px
				padding-top 10px
	.col
		@media (max-width: $sm)
			padding-bottom 20px
			&:last-of-type
				padding-bottom 0
			ul
				li
					display block
					margin 0 0 10px
					a
						letter-spacing 0.15em
						text-decoration none
		@media (min-width: $sm)
			line-height 125px
			padding-bottom 0
			& > img, & > .footer-attr
				display inline-block
				line-height 125px
				vertical-align middle
			& > .footer-attr
				width 100%
				clearfix()
				& > *
					line-height initial
